<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/text_yellow</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="HomeRadioButton">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">8.6sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/home_bottom_radio_text_color</item>
    </style>

    <style name="home_mine_item">
        <item name="android:background">@drawable/normal_bottom_line</item>
        <item name="android:drawableEnd">@mipmap/mine_arrow</item>
        <item name="android:drawableRight">@mipmap/mine_arrow</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="home_mine_item_no_bottom_line">
        <item name="android:background">@color/background_white</item>
        <item name="android:drawableEnd">@mipmap/mine_arrow</item>
        <item name="android:drawableRight">@mipmap/mine_arrow</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>

    </style>

    <style name="profile_input_linearlayout">
        <item name="android:background">@color/background_white</item>
    </style>

    <style name="profile_input_linearlayout_head">
        <item name="android:layout_marginLeft">14.4dp</item>
        <item name="android:textSize">14.4sp</item>
        <item name="android:gravity">center|start</item>
    </style>

    <style name="profile_input_linearlayout_solid">
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center|end</item>
        <item name="android:layout_marginRight">14.4dp</item>
        <item name="android:drawablePadding">10.88dp</item>
        <item name="android:drawableRight">@mipmap/mine_arrow</item>
    </style>

    <style name="anchor_navigation">

        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">@color/anchor_text_color</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@color/background_white</item>

    </style>

    <style name="SeekBarAppTheme">
        <item name="android:max">1000</item>
    </style>

    <style name="sex_select_radio_button_select">
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:textSize">14.4sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="activity_register_two_select">
        <item name="android:background">@drawable/activity_register_two_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="play_circle_image_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:background">@drawable/home_play_button_stop</item>
    </style>

    <declare-styleable name="calendarView">
        <!--开始日期(xxxx.x)-->
        <attr name="dateStart" format="string" />
        <!--结束日期(xxxx.x)-->
        <attr name="dateEnd" format="string" />
    </declare-styleable>

    <style name="safe_item_text">
        <item name="android:background">@drawable/normal_bottom_line</item>
        <item name="android:drawableEnd">@mipmap/mine_arrow</item>
        <item name="android:drawableRight">@mipmap/mine_arrow</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="safe_item_button">
        <item name="android:background">@drawable/classify_tag_select</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:textColor">@color/text_yellow</item>
    </style>

    <style name="contextMenuAnim" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/popup_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/popup_menu_exit</item>
    </style>

    <style name="play_bottom_button">
       <item name="android:layout_gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">16.44sp</item>
    </style>
</resources>
