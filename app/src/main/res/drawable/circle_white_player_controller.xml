<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@mipmap/play_bg">

    </item>
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="7px"
                android:color="@color/background_white" />
            <size
                android:width="63.2dp"
                android:height="63.2dp" />
            <solid android:color="#33000000" />

        </shape>

    </item>

    <item
        android:bottom="10dp"
        android:gravity="bottom|center"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp">
        <selector>
            <item
                android:drawable="@mipmap/play_button"
                android:state_checked="false"

                />
            <item
                android:drawable="@mipmap/play_button"
                android:state_checked="true" />
        </selector>
    </item>

</layer-list>
