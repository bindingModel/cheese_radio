<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.cheese.radio.ui.media.play.PlayModel" />

        <variable
            name="entity"
            type="com.cheese.radio.ui.media.play.PlayEntity" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/background_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:background="@{entity.image}"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="155dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="45dp"
                    android:src="@{entity.image}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="17dp"
                    android:text="@{entity.title,default=123456789}"
                    android:textColor="@color/text_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_height="44dp"
                        android:layout_width="44dp"
                        android:layout_gravity="bottom"
                        android:src="@{entity.anchorIcon}"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        />
                    <TextView
                        android:layout_width="164dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="12dp"
                        android:layout_marginLeft="12dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="@{entity.msg}" />

                  <!--  android:drawableLeft="@{entity.anchorIcon}"
                    android:drawableStart="@{entity.anchorIcon}"
                    -->
                    <TextView
                        android:id="@+id/care_anchor"
                        android:layout_width="65dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center|end"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/login_button_shape"
                        android:drawableLeft="@mipmap/plus"
                        android:drawableStart="@mipmap/plus"
                        android:gravity="center"
                        android:onClick="@{entity::onClick}"
                        android:paddingLeft="10.8dp"
                        android:paddingRight="10.8dp"
                        android:text="@string/follow"
                        android:textColor="@color/text_white" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:drawableLeft="@mipmap/play_count"
                    android:drawablePadding="6dp"
                    android:text="@{entity.playViews,default=00}"
                    android:textSize="9.6sp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp">

                    <SeekBar
                        android:id="@+id/app_video_seekBar"
                        style="@style/SeekBarAppTheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:maxHeight="3dp"
                        android:progressDrawable="@drawable/seekbar_style"
                        android:splitTrack="false"
                        android:thumb="@drawable/seekbar_circle" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="@{vm.currentTime,default=00}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginRight="15dp"
                        android:text="@{entity.length,default=00}" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingLeft="110dp"
                    android:paddingRight="110dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:onClick="@{vm::onRewindClick}"
                        android:src="@mipmap/previous" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:onClick="@{vm::onForwardClick}"
                        android:src="@mipmap/next" />

                    <RadioButton
                        android:id="@+id/play"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:button="@null"
                        android:checked="@{vm.checked}"
                        android:drawableTop="@drawable/audio_play"
                        android:onClick="@{vm::onPlayClick}"
                        android:paddingTop="8dp" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="57.33dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@null"
                        android:drawableLeft="@mipmap/comment"
                        android:paddingLeft="18dp" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/combined" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/clock_subscribe" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/loop" />


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/toolbar_organza" />
    </FrameLayout>
</layout>