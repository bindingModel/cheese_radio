<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="vm"
            type="com.cheese.radio.ui.user.my.message.MessageModel" />
        <variable
            name="entity"
            type="com.cheese.radio.ui.user.my.message.MessagesData"/>
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_gray">

        <include layout="@layout/toolbar" />
        <LinearLayout
            android:id="@+id/system_message"
            android:onClick="@{vm::onSystemClick}"
            android:layout_width="match_parent"
            android:background="@drawable/normal_bottom_line"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/system_msg"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/system_message"
                    android:textSize="14.4sp"
                    android:textColor="@color/text_black"
                    android:padding="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sys_text"
                    android:text="暂无消息"
                    android:textSize="12.5sp"
                    android:textColor="#777777"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:padding="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/vip_message"
            android:onClick="@{vm::onSystemClick}"
            android:layout_width="match_parent"
            android:background="@drawable/normal_bottom_line"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/vip_msg"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vip_msg"
                    android:textSize="14.4sp"
                    android:textColor="@color/text_black"
                    android:padding="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无消息"
                    android:id="@+id/vip_text"
                    android:textSize="12.5sp"
                    android:textColor="#777777"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:padding="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/class_message"
            android:onClick="@{vm::onSystemClick}"
            android:layout_width="match_parent"
            android:background="@drawable/normal_bottom_line"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/class_msg"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/class_msg"
                    android:textSize="14.4sp"
                    android:textColor="@color/text_black"
                    android:padding="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无消息"
                    android:textSize="12.5sp"
                    android:textColor="#777777"
                    android:id="@+id/class_text"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:padding="1dp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/book_message"
            android:onClick="@{vm::onSystemClick}"
            android:layout_width="match_parent"
            android:background="@drawable/normal_bottom_line"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@mipmap/book_msg"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/book_msg"
                    android:textSize="14.4sp"
                    android:textColor="@color/text_black"
                    android:padding="1dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="暂无消息"
                    android:textSize="12.5sp"
                    android:id="@+id/book_text"
                    android:textColor="#777777"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:padding="1dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</layout>